#!/usr/bin/env bash
#
# shellcheck disable=SC2312

set -o errexit
set -o nounset
set -o pipefail

DEBFOSTER_OUTPUT="$(mktemp)"

debfoster --show-orphans | tail +2 | sed 's/\s\+/\n/g' | sed '/^[[:space:]]*$/d' >"${DEBFOSTER_OUTPUT}"

while read -r PKG; do
    if (($(apt-cache rdepends "${PKG}" 2>/dev/null | wc -l) <= 2)); then
        echo "${PKG}"
    fi
done < <(cat "${DEBFOSTER_OUTPUT}")
