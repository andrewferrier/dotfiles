[color "diff"]
	old = red strike

[user]
	name = Andrew Ferrier
	email = andrewferrier@example.com

[core]
	pager = less -FX

[init]
	defaultBranch = main

[diff]
	renames = copies
	mnemonicprefix = true
	submodule = log
	algorithm = minimal
	colorMoved = default

[rerere]
	enabled = true

[fetch]
	prune = true

[branch]
	autoSetupRebase = always

[pull]
	rebase = true

[merge]
	tool = nvim

[mergetool "nvim"]
	cmd = "nvim -d -c \"wincmd l\" -c \"norm ]c\" \"$LOCAL\" \"$MERGED\" \"$REMOTE\""
	trustExitCode = true

[mergetool]
	keepBackup = false
	prompt = false

[rebase]
	autoSquash = true
	autoStash = true

[status]
	short = true

[interactive]
	singlekey = true

[include]
	path = ~/gitco/github/git-utilities/gitaliases

[web]
	browser = open

[credential]
	helper = cache --timeout=7200

[alias]
	ignore = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	oldest-ancestor = !zsh -c 'diff -u <(git rev-list --first-parent "${1:-master}") <(git rev-list --first-parent "${2:-HEAD}") | sed -ne \"s/^ //p\" | head -1' -
	open = git-open
	search-historicallines = !git rev-list --all | xargs git grep

[commit]
	verbose = true

[github]
	user = andrewferrier

[filter "lfs"]
	required = false
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f

[url "git@github.com:"]
	insteadOf = https://github.com/

[url "git@github.ibm.com:"]
	insteadOf = https://github.ibm.com/

[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
